if (mostrando_dialogo) {
    // Incremento do delay entre caracteres
    tempo_delay += 1;

    // Mostra o texto gradualmente
    if (tempo_delay >= 5) {  // Delay ajustável
        tempo_delay = 0;
        if (indice < string_length(dialogos[dialogo_atual].texto)) {
            // Adiciona o próximo caractere ao texto 
            texto_atual += string_char_at(dialogos[dialogo_atual].texto, indice);
            indice += 1;
			alarm[0] = 1
        }
    }

    // Completa o texto com ESPAÇO (se o jogador pressionar a tecla de espaço)
    if (keyboard_check_pressed(vk_space)) {
		count_space++
        if (indice < string_length(dialogos[dialogo_atual].texto)) {
            texto_atual = dialogos[dialogo_atual].texto;  // Mostra o texto completo
            indice = string_length(dialogos[dialogo_atual].texto);  // Garante que o índice chegue ao final
        } else {
            proximo_dialogo = true;  // Vai para o próximo diálogo
        }
    }

    // Pula o diálogo atual com ENTER (sem delay)
    if (keyboard_check_pressed(vk_escape)) {
		count_space++
		exibe = true
		if(count_space > 1){
			
			 exibe = false
			 count_space = 0
			if room == rm_catcine_2{
				carrega_jogo2(global.nome_jogador,rm_prototipo,4)
			// Fim do diálogo, termina a exibição
				instance_destroy()
			}else{
				carrega_jogo2(global.nome_jogador,rm_prototipo,1)
			// Fim do diálogo, termina a exibição
				instance_destroy()
			}
		}
       
    }

    // Avança para o próximo diálogo
    if (proximo_dialogo) {
        proximo_dialogo = false;
        dialogo_atual += 1;

        if (dialogo_atual < array_length(dialogos)) {
            texto_atual = "";  // Reseta o texto para o próximo diálogo
            indice = 0;  // Reseta o índice de caracteres
            imagem_dialogo = dialogos[dialogo_atual].imagem;  // Atualiza a imagem do diálogo
        } else {
            mostrando_dialogo = false;
			if room == rm_catcine_2{
				carrega_jogo2(global.nome_jogador,rm_prototipo,4)
			// Fim do diálogo, termina a exibição
				instance_destroy()
			}else{
				carrega_jogo2(global.nome_jogador,rm_prototipo,1)
			// Fim do diálogo, termina a exibição
				instance_destroy()
			}
	   }
